<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android=
    "http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Activity_MenuIncidencia"
    android:gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:animateLayoutChanges="true"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/shape_textview_title_them"
                    android:gravity="center"
                    android:text="@string/Lugar_y_tiempo"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_margin="10dp"/>
                <!--Operador-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        android:background="@drawable/shape_textview_theme"
                        android:text="Operador:"
                        android:textAlignment="center"
                        android:textColor="@color/black" />
                    <TextView
                        android:textAlignment="center"
                        android:id="@+id/txtOperador"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="true"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </LinearLayout>
                <!--Coordenadas-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="20dp"
                            android:background="@drawable/shape_textview_theme"
                            android:text="Latitud:"
                            android:textAlignment="center"
                            android:textColor="@color/black" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:background="@drawable/shape_textview_theme"
                            android:text="Longitud:"
                            android:textAlignment="center"
                            android:textColor="@color/black" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_weight="1">
                            <TextView
                                android:id="@+id/txtAreaLatitud"
                                android:layout_width="79dp"
                                android:layout_height="20dp"
                                android:enabled="true"
                                android:text="Asignando.."
                                android:textColor="@color/black"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/txtAreaLongitud"
                                android:layout_width="79dp"
                                android:layout_height="20dp"
                                android:text="Asignando.."
                                android:textColor="@color/black"
                                android:textStyle="bold" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:gravity="center">
                            <ImageButton
                                android:id="@+id/btnDireccion"
                                android:layout_width="53dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/btn_fondo_color"
                                android:src="@drawable/ic_explorer"
                                android:text="Ubicacion "
                                android:textColor="@color/black" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!--Fecha-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        android:background="@drawable/shape_textview_theme"
                        android:text="fecha:"
                        android:textAlignment="center"
                        android:textColor="@color/black" />
                    <TextView
                        android:textAlignment="center"
                        android:id="@+id/txthora"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text=""
                        android:textColor="@color/black" />
                </LinearLayout>
                <!--Referenciua-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:background="@drawable/shape_textview_theme"
                        android:text="Referencia:"
                        android:textAlignment="center"
                        android:textColor="@color/black" />
                    <EditText
                        android:id="@+id/edtxtReferencia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </LinearLayout>
                <!--Nombre Referencia-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:background="@drawable/shape_textview_theme"
                        android:text="Nombre del representante: "
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:layout_marginBottom="5dp"/>
                    <EditText
                        android:id="@+id/txtNombreRepresentante"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/btnConsultaR"
                    android:layout_width="wrap_content"
                    android:layout_height="39dp"
                    android:background="@drawable/btn_fondo_color"
                    android:drawableEnd="@drawable/ic_baseline_search_24"
                    android:text="cedula"
                    android:layout_margin="10dp"/>
                <Button
                    android:id="@+id/btnAudio"
                    android:layout_width="wrap_content"
                    android:layout_height="39dp"
                    android:background="@drawable/btn_fondo_color"
                    android:drawableEnd="@drawable/ic_mic_24"
                    android:text="Grabar"
                    android:layout_margin="10dp"/>
            </LinearLayout>


            </LinearLayout>





        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:background="@drawable/ground_p1"
            android:animateLayoutChanges="true"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/shape_imageview_corners"
                    android:layout_margin="10dp">
                    <ImageView
                        android:id="@+id/ImagenFoto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="15dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_textview_title_them"
                        android:text="Evidencia Fotografica"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <ImageButton
                        android:id="@+id/BtnTomarFotos"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/btn_fondo_color"
                        android:src="@drawable/ic_baseline_photo_camera_white" />

                    <ImageButton
                        android:id="@+id/botonGuardar"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/btn_fondo_color"
                        android:src="@drawable/ic_saved"
                        android:text="Boton: Guardar" />
                </LinearLayout>

            </LinearLayout>









        </androidx.cardview.widget.CardView>
        <Button
            android:id="@+id/GuardarBtn"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:background="@drawable/btn_fondo_color"
            android:drawableEnd="@drawable/ic_saved"
            android:text="Guardar Incidencia"
            android:layout_margin="10dp"/>

    </LinearLayout>


</LinearLayout>